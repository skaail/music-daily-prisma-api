generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Album {
  id   Int    @id @default(autoincrement())
  nome String

  link String
  capa String
  nota Decimal

  banda   Banda @relation(fields: [bandaId], references: [id])
  bandaId Int

  songs Song[]
}

model Banda {
  id   Int    @id @default(autoincrement())
  nome String @unique
  foto String?

  albums Album[]
}

model Song {
  id   Int    @id @default(autoincrement())
  name String

  link String

  album   Album @relation(fields: [albumId], references: [id], onDelete: Cascade)
  albumId Int
}
